#! /bin/bash

if [ $# -eq 0 ] ; then
  echo "please specify an exercise (scalar_products, powers_of_ten, derivatives or vectors)"
  exit 1
fi

if [ ! -f $1.py ] ; then
  echo "Did not find $1.py"

let i=0
if [ -f "$1.txt" ] ; then
  rm "$1.txt"
fi
while [ $i -lt 100 ] ; do
  python3 $1.py >> $1.txt
  let i=i+1
done
